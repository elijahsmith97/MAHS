<div class="row" style="margin-top: 10%;" >
	<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
		<%= image_tag "bear.jpg", :height => "256px", :width => "223px" %>
	</div>

	<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
		<br/>
		<br/>
		<br/>
		<br/>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-horizontal') do |f| %>
		  <div class="form-group">
		  	<%= f.label :email, "Email", :class => 'col-lg-2 control-label white body_cursive' %>
		  	<div class="col-lg-10">
		  		<%= f.email_field :email, autofocus: true %>
		  	</div>
		  </div>

		  <br/>
		  <br/>


		  <div class="form-group">
		  	<%= f.label :password, "Password", :class => 'col-lg-2 control-label white body_cursive' %>
		  	<div class="col-lg-10">
		  		<%= f.password_field :password %>
		  	</div>
		  </div>

		  <br/>
		  <br/>

		  <div class="form-group">
		  	<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
		  	<div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
		  		<%= f.submit "Sign in", :class => "btn btn-primary" %>
		  		<%= link_to "Sign up", new_registration_path(resource_name), :class => "btn btn-success" %>
		  	</div>
		  </div>
		<% end %>
	</div>
</div>





